<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
		    <corners android:radius="10dip"/>
		    <gradient android:startColor="#FF9DB525" android:endColor="#FFB5CD49" android:angle="270"/>
		    <stroke android:width="1dip" android:color="#FF585858"/>
		</shape>
    </item>
    <item>
        <shape android:shape="rectangle">
		    <corners android:radius="10dip"/>
		    <gradient android:startColor="#FF9DB525" android:endColor="#FFB5CD49" android:angle="90"/>
		    <stroke android:width="1dip" android:color="#FF585858"/>
		</shape>
    </item>
    
</selector>

