<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="croptext">
		<item name="android:textColor">@color/cropButtonTextColor</item>
		<item name="android:textSize">12sp</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:layout_marginBottom">5dip</item>
	</style>
	<style name="cropbutton">
		<!--<item name="android:layout_width">0dip</item>-->
		<!--<item name="android:minWidth">40dip</item>-->
		<!--<item name="android:layout_weight">1</item>-->
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="applyFilterButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="cropbuttonHolder">
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_weight">1</item>
		<!--<item name="android:layout_width">match_parent</item>-->
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="leftButtonHolder" parent="cropbuttonHolder">
		<item name="android:background">@color/transparent</item>
		<item name="android:layout_gravity">left</item>
	</style>
	<style name="centerButtonHolder" parent="cropbuttonHolder">
		<item name="android:background">@color/transparent</item>
	</style>
	<style name="rightButtonHolder" parent="cropbuttonHolder">
		<!--<item name="android:background">@drawable/normal</item>-->
		<item name="android:background">@color/transparent</item>
		<item name="android:layout_gravity">right</item>
	</style>
	<style name="cropbuttonLayout">
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@color/black</item>
	</style>
	<style name="actionBarText">
		<item name="android:textColor">#46464b</item>
		<item name="android:textSize">18sp</item>
		<!--<item name="android:textStyle">bold</item>-->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">60dip</item>
		<item name="android:background">@drawable/title_background</item>
		<item name="android:layout_gravity">center_vertical</item>
	<!--  	<item name="android:shadowColor">@color/white</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">0.3</item>
		-->
	</style>
	<style name="actionBarTitle" parent="actionBarText">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="titlebarDivider">
		<item name="android:layout_width">1dip</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/crop_vertical_divider</item>
	</style>
	<style name="restoreButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#4b4b4b</item>
		<item name="android:background">@drawable/restore_bg</item>
	</style>
	<style name="greenButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">60dip</item>
		<item name="android:minHeight">40dip</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#2f2f2f</item>
	</style>
	<style name="buyButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">120dip</item>
		<!--<item name="android:minHeight">40dip</item>-->
		<item name="android:layout_gravity">center_vertical|right</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/white</item>
		<!--<item name="android:padding">13dip</item>-->
		<item name="android:layout_marginTop">4dip</item>
		<item name="android:layout_marginBottom">4dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:layout_marginRight">4dip</item>
	</style>
	<style name="stickerText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/stickerTextColor</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="buyPackTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="buyPackDescription">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">12sp</item>
	</style>
</resources>