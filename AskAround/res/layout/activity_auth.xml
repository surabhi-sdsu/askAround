<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/auth_fb_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dip"
        android:text="facebook" />

    <Button
        android:id="@+id/auth_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_fb_button"
        android:layout_margin="40dip"
        android:text="join with email" />

    <Button
        android:id="@+id/auth_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_register_button"
        android:layout_margin="40dip"
        android:text="Sign in" />

</RelativeLayout>